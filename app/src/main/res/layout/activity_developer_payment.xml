<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fraud Engine Test (DEV Mode)"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#D81B60"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inputs will directly trigger the fraud engine logic."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/edit_dev_receiver_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Receiver ID (e.g., testuser@bank)"
        android:inputType="text"
        android:padding="15dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_dev_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount (e.g., 50000.00)"
        android:inputType="numberDecimal"
        android:padding="15dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_dev_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Transaction Reason (e.g., Unusual large transfer)"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btn_dev_initiate_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUN FRAUD CHECK"
        android:padding="15dp"
        android:textSize="18sp"
        android:backgroundTint="#D81B60"/>

</LinearLayout>