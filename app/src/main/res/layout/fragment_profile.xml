<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="32dp"/>

        <!-- Profile Picture Container -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/circle_background_gray"
            android:elevation="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:tint="#673AB7"
                android:layout_gravity="center"
                android:contentDescription="Profile Icon"/>
        </FrameLayout>

        <!-- Profile Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- User Info Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#673AB7"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/text_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name XYZ"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <!-- UPI ID Info Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="#673AB7"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPI ID"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/text_upi_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="user123@demoupi"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <!-- Mobile Number Info Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="#673AB7"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number"
                            android:textSize="12sp"
                            android:textColor="#9CA3AF"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/text_phone_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 8421497761"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Developer Mode Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_preferences"
                    android:tint="#673AB7"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Developer Mode"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_developer_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#673AB7"
                    app:trackTint="#E1BEE7"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <!-- Change UPI PIN Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_upi_pin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Change UPI PIN"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:backgroundTint="#673AB7"
                app:icon="@android:drawable/ic_lock_idle_lock"
                app:iconTint="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="12dp"/>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:backgroundTint="#DC2626"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconTint="@android:color/white"
                android:elevation="2dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>