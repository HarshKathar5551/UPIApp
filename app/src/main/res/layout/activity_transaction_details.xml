<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Details"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Status"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/text_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS_CODE"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#D81B60"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_marginBottom="24dp"/>

        <TextView
            style="@style/DetailLabel"
            android:text="Receiver UPI ID"/>
        <TextView
            android:id="@+id/text_detail_receiver"
            style="@style/DetailValue"
            android:text="user@upi"/>

        <TextView
            style="@style/DetailLabel"
            android:text="Amount Paid"/>
        <TextView
            android:id="@+id/text_detail_amount"
            style="@style/DetailValue"
            android:text="â‚¹ 1,000.00"/>

        <TextView
            style="@style/DetailLabel"
            android:text="Transaction Message"/>
        <TextView
            android:id="@+id/text_detail_message"
            style="@style/DetailValue"
            android:text="For testing fraud engine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fraud Engine Analysis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            style="@style/DetailLabel"
            android:text="Risk Score (0-100)"/>
        <TextView
            android:id="@+id/text_detail_risk_score"
            style="@style/DetailValue"
            android:text="85"/>

        <TextView
            style="@style/DetailLabel"
            android:text="Decision Reason"/>
        <TextView
            android:id="@+id/text_detail_reason"
            style="@style/DetailValue"
            android:text="High velocity transaction alert."/>

    </LinearLayout>
</ScrollView>