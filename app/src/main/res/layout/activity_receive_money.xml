<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Money"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="220dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="8dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/image_qr_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="8dp"
            android:src="@drawable/ic_qr_placeholder"
            android:contentDescription="QR Code for receiving money"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your UPI ID"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#F0F0FF">

        <TextView
            android:id="@+id/text_receive_upi_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserX123@demoupi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="15dp"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_share_upi_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share UPI ID/QR"
        android:padding="15dp"
        android:textSize="18sp"
        android:backgroundTint="#0080FF"/>

</LinearLayout>