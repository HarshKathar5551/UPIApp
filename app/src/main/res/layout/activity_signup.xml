<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white"> <FrameLayout
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/circle_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Logo"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:textSize="16sp"/>
</FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#673AB7"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/edit_signup_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile No."
        android:inputType="phone"
        android:maxLength="10"
        android:padding="14dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_signup_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="14dp"
        android:background="@drawable/edittext_border_bg"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:padding="15dp"
        android:textSize="18sp"
        android:backgroundTint="#673AB7"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already an User? "
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/text_login_instead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login instead â†’"
            android:textColor="#673AB7"
            android:textStyle="bold"
            android:padding="4dp"/>
    </LinearLayout>

</LinearLayout>